<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <p id="notice"><%= notice %></p>

    <h2>タスク一覧</h2>

    <table class="table table-bordered design-table">
      <thead>
        <tr class="warning">
          <th>投稿者</th><th>タスク名</th><th>内容</th><th>締め切り</th><th>担当者</th><th>状況</th><th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
         <% @tasks.each do |task| %>
           <tr>
             <td><%= task.user.name %></td>
             <td><%= task.title %></td>
             <td><%= task.content %></td>
             <td><%= task.deadline.strftime("%y年%m年%d日") %>
             <br /><%= task.deadline.strftime("%H時%M分") %></td>
             <td><%= task.charge.name %></td>
             <td><%= task.status %></td>
             <td><%= link_to '詳細', task, class: 'btn btn-default btn-sm btn-primary' %></td>
             <td><%= link_to '修正', edit_task_path(task), class: 'btn btn-default btn-sm btn-success' %></td>
             <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm btn-danger' %></td>
           </tr>
        <% end %>
      </tbody>
    </table><br />

    <%= link_to '新しいタスク', new_task_path, class: 'btn btn-default btn-info'  %>
  </div>
</div>
