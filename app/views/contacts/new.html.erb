<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1"
    <p><%= notice %></p>

    <h1>お問い合わせ</h1>

    <%= form_for(@contact, url:confirm_contacts_path) do |f| %>
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
          <ul>
            <% @contact.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br>
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control'  %><br>
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control'  %><br>
      <%= f.submit 'send', class: 'btn btn-info btn-block' %>
    <% end %><br>

    <%= link_to "トップに戻る",blogs_path %>
  </div>
</div>
