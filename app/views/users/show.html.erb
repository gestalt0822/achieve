<div class="container">
  <h2><%= @user.name %>さんの詳細ページ</h2>
  <p>名前：<%= @user.name %></p>
  <p>E-mail：<%= @user.email %></p>

  <% if @user.provider == "twitter" || @user.provider == "facebook" %>
    <%= image_tag @user.image_url, size: '200x200' %><br />
  <% else %>
    <%= image_tag @user.avatar, size: '200x200' %><br />
  <% end %>

<%= render partial: 'follower', locals: { followers: @followers} %>
<%= render partial: 'followed_user', locals: { followed_users: @followed_users} %>

<%= link_to "戻る", users_path %>

</div>
