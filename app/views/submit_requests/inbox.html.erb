<div class="container">
  <div class="col-md-10 col-md-offset-1">

<p id="notice"><%= notice %></p>

<!--
<h1>Listing Submit Request</h1>
-->

<h2>タスク（未決)</h2>

<table class="table table-bordered design-table">
  <thead>
    <tr class="warning">
      <th>依頼者</th>
      <th>タスク</th>
      <th>メッセージ</th>
      <th>実施者</th>
      <th>状況</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submit_requests.each do |submit_request| %>
      <tr>
        <td><%= submit_request.user.name %></td>
        <td><%= submit_request.task.title %></td>
        <td><%= submit_request.message %></td>
        <td><%= submit_request.request_user_id %></td>
        <td><%= submit_request.status %></td>
        <td><%= link_to '承認', approve_submit_request_path(submit_request, submit_request: {status: 2}), method: :patch, data:{confirm: '承認しますか?
          '}, class: 'btn btn-default btn-sm btn-warning' %></td>
        <td><%= link_to '却下', submit_request_path(submit_request, submit_request: {status: 9}), methode: :patch, data:{confirm: '却下しますか?
          '} , class: 'btn btn-default btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新しいタスクの依頼', new_submit_request_path, class: 'btn btn-default btn-info' %>

</div>
</div>
